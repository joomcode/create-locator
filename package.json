{
  "name": "create-locator",
  "version": "0.0.8",
  "description": "Creates typed component locators for tests ðŸ“Œ",
  "author": "uid11",
  "bugs": "https://github.com/joomcode/create-locator/issues",
  "devDependencies": {
    "prettier": ">=2.8",
    "typescript": ">=5.0"
  },
  "exports": {
    ".": "./index.js",
    "./production": "./production.js"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "production.js",
    "production.d.ts",
    "types.d.ts"
  ],
  "homepage": "https://github.com/joomcode/create-locator#readme",
  "keywords": [
    "autotest",
    "component",
    "e2e",
    "locator",
    "selector"
  ],
  "license": "MIT",
  "packageManager": "npm@8",
  "repository": {
    "type": "git",
    "url": "https://github.com/joomcode/create-locator"
  },
  "scripts": {
    "prebuild": "rm --force *.js [!r]*.d.ts ./spec/*.js ./spec/*.spec.d.ts ./spec/utils.d.ts",
    "build": "tsc",
    "prettier": "prettier --cache --cache-strategy=content --write . !package-lock.json !spec",
    "test": "export _START=$(date +%s%3N) && npm run build && npm run prettier && node ./spec/index.spec.js",
    "test:memory": "node ./spec/memory.spec.js",
    "prepublishOnly": "npm test"
  },
  "sideEffects": false,
  "types": "index.d.ts"
}
